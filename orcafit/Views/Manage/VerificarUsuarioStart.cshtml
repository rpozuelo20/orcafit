@{
    ViewBag.ViewName = "verify";
}
@section css{
    <link href="~/css/home.css" rel="stylesheet" />
}
@section scripts{
    <script>
        $(document).ready(function () {
            $("#btnLogin").click(function () {
                $("#ctnLoading").removeClass("d-none");
                $("#ctnLoading").addClass("d-flex");
            });
            $("#floatingInput").on("keyup", function () {
                if ($("#floatingInput").val().length > 0) {
                    $("#btnVerify").attr("disabled", false);
                } else {
                    $("#btnVerify").attr("disabled", "disabled");
                }
            });
        });
    </script>
}

<div class="w-100 d-flex align-items-center justify-content-center" style="min-height: 100vh; position: relative; margin-top: -86px; background: #101214; background-image: radial-gradient(#585B5E 1px, transparent 0); background-size: 19px 19px; background-position: -10px -10px; box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.5) inset; ">
    <partial name="_PartialLoading" />
    <div class="container px-4 d-flex align-items-center justify-content-center">
        <div class="p-5 rounded-3 bg-white col-lg-6 border" style="max-width: 410px;">
            <h2 class="fw-medium mb-5">Verificar usuario:</h2>
            <form method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control rounded-4 text-lowercase" id="floatingInput" name="telefono" placeholder="Teléfono">
                    <label for="floatingInput">Teléfono</label>
                </div>
                <small class="text-muted">@ViewData["MENSAJE"]</small>
                <button class="w-100 my-2 btn btn-lg rounded-4 btn-primary fw-medium" type="submit" id="btnVerify" disabled="disabled">Verificar</button>
                <small class="text-muted d-block">Es necesario que introduzca un numero de telefono para poder realizar la verificacion de la cuenta.</small>
            </form>
        </div>
    </div>
</div>