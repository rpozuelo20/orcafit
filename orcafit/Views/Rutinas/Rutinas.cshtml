@model List<Rutina>

@{
    ViewBag.ViewName = "Rutinas";
}

<div class="w-100" style="min-height: calc(100vh - 86px);">

    @if (Model.Count() != 0)
    {
    <div class="container px-4 py-5">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">

            @foreach (Rutina item in Model)
            {
            <div class="col">
                <div class="card">
                    <img class="bd-placeholder-img card-img-top w-100" style="object-fit: cover;" src="~/uploadFiles/images/@item.Imagen" height="225" />
                    <div class="card-body">
                        <p class="card-text lead fw-medium">@item.Nombre</p>
                        @*<p class="card-text">
                            @if (item.RutinaTexto.Length >= 250)
                            {
                                @Html.Raw(item.RutinaTexto.ToString().Substring(0, 250))
                            }
                            else
                            {
                                @Html.Raw(item.RutinaTexto.ToString())
                            }…
                        </p>*@
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group w-100">
                                <a class="btn w-100 btn-primary fw-medium"
                                   asp-action="Rutina" asp-route-id="@item.IdRutina">Empezar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
    }
    else
    {
<div class="container px-4 py-5 d-flex align-items-center justify-content-center">
    <div class="p-5 rounded-3 bg-white col-lg-6 border">
        <h2 class="fw-medium mb-3">Rutinas no disponibles</h2>
        <p>En estos momentos <span class="fw-bold">no disponemos de rutinas</span>, pero no te preocupes <span class="fw-bold">guerrero</span>, estamos trabajando para ofrecerte <span class="fw-bold">las mejores rutinas.</span></p>
        <a class="btn w-100 btn-primary fw-medium"
           asp-controller="Home" asp-action="index">Volver</a>
    </div>
</div>
    }

</div>