@model List<Usuario>
@section css{ 
    <link href="~/css/usuarios.css" rel="stylesheet" />
}
@{
    ViewBag.ViewName = "usuarios";
}

<div class="w-100" style="min-height: calc(100vh - 86px);">
    <div class="container p-4">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
            @foreach (Usuario user in Model)
            {
                <div class="col p-3 mycustomuser user-select-none" style="cursor:pointer">
                    <div class="d-flex align-items-start">
                        <img src="@user.Imagen" class="rounded-3 me-3 border" style="height: 75px; width: 75px; min-height: 75px; min-width: 75px; object-fit: cover;" />
                        <div style="height: 75px;" class="d-flex flex-column justify-content-end">
                            <div class="d-flex align-items-center mb-2"><p class="fw-medium lead my-0 text-capitalize">@user.Username</p><p class="badge rounded-3 bg-primary my-0 ms-2 text-lowercase">@user.Role</p></div>
                            <p class="mb-0">Usuario desde @user.Fecha.ToShortDateString().</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
